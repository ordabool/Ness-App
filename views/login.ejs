<%- include include/header %>
<link rel="stylesheet" href="../../assets/css/signin.css">

<div class="container">
  <%- messages() %>
  <form method="post" action="/users/login" class="form-signin">
    <h2 class="form-signin-heading">התחברות</h2>
    <label for="email" class="sr-only">כתובת מייל</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="כתובת מייל" required autofocus>
    <label for="password" class="sr-only">סיסמה</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="סיסמה" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">התחבר</button>
    <br>
    <p>לא קיים משתמש? <a href="/users/register">הרשם</a> </p>
  </form>

</div>
<!-- /container -->

<%- include include/footer %>
